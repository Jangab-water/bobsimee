<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProposeActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="239dp" />

            <TextView
                android:id="@+id/tv_propose_name2"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="26dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:fontFamily="@font/gmarketm"
                android:text="요리 제목"
                android:textSize="30sp" />
            <TextView
                android:id="@+id/tv_propose_name"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="26dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:fontFamily="@font/gmarketm"
                android:text="TextView"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_propose_ingredient2"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="26dp"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:fontFamily="@font/gmarketm"
                android:text="재료"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/tv_propose_ingredient"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="26dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:fontFamily="@font/gmarketm"
                android:text="TextView"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_propose_recipe2"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="26dp"
                android:ems="10"
                android:fontFamily="@font/gmarketm"
                android:text="요리법"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/tv_propose_recipe"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="26dp"
                android:ems="10"
                android:fontFamily="@font/gmarketm"
                android:text="TextView"
                android:textSize="20sp"/>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>